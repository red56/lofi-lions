/ Fixed navbar
.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand
        = link_to 'Localization Portal', root_path
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li= link_to 'Dashboard', root_path
      %ul.nav.navbar-nav.navbar-right
        %li{active_section("languages")}
          = link_to "Languages", languages_path
        %li{active_section("users")}
          = link_to "Users", users_path if current_user.is_administrator?
        %li
          = link_to("Logout", destroy_user_session_path, method: :delete)
        %li
          = link_to "Logged in as #{current_user.email}", '/'
